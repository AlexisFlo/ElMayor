---
import { Image } from "astro:assets";
import logoImg from "../assets/ELMAYOR.jpg";

const navItems = [
  { label: "Solution", href: "" },
  { label: "Who we help", href: "" },
  { label: "Outcomes", href: "" },
  { label: "Company", href: "" },
];
---

<header class="bg-white shadow-md">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <a href="/" class="flex font-serif font-bold items-center">
      <Image
        src={logoImg}
        alt="Company logo"
        class="rounded-lg"
        width={48}
        height={48}
      />
      <span class="ml-2">El Mayor</span>
    </a>
    <nav class="hidden md:flex space-x-6">
      {navItems.map((item) => <a href={item.href} class="text-gray-700 hover:text-primary-500 transition duration-150 ease-in-out">{item.label}</a>)}
    </nav>
    <a href="/#" class="bg-primary-500 text-gray px-4 py-2 rounded hover:bg-primary-600 transition duration-150 ease-in-out">
      Contact Us
    </a>
  </div>
</header>
